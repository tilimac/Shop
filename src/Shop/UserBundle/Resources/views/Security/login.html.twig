{% extends "ShopUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}

<form class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="form-group">
        <label for="username" class="col-sm-4 control-label">{{ 'security.login.username'|trans }}</label>
        <div class="col-sm-8">
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
        </div>
    </div>

    <div class="form-group">
        <label for="password" class="col-sm-4 control-label">{{ 'security.login.password'|trans }}</label>
        <div class="col-sm-8">
            <input class="form-control" type="password" id="password" name="_password" required="required"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <div class="checkbox">
                <label for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
                </label>
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" id="_submit" name="_submit" class="btn btn-default">{{ 'security.login.submit'|trans }}</button>
        </div>
    </div>
</form>
{% endblock fos_user_content %}
